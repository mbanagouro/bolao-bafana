@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login - Bolão Bafana</title>
    <link rel="stylesheet" type="text/css" media="screen" href="@Url.Content("~/Content/Css/global.css")" />
    <link rel="stylesheet" type="text/css" media="screen" href="@Url.Content("~/Content/Css/pages.css")" />

    <script type="text/javascript" src="@Url.Content("~/Content/Js/modernizr-1.7.min.js")"></script>
</head>

<body>
    <div id="wrapper" class="Login">
	    <div class="loginBox">
		    <div class="logo">Bolão Bafana</div>
		
            <form id="form-login" action="@Url.Action("Index", "Login")" method="post">
                <input type="hidden" name="ReturnUrl" value="@Request.QueryString["ReturnUrl"]" />
			    <ul class="loginForm">
				    <li class="input">
					    <label for="login">Login</label>
					    <input type="text" id="login" name="login" maxlength="100" />
				    </li>
				
				    <li class="input">
					    <label for="password">Senha</label>
					    <input type="password" id="password" name="senha" maxlength="15" />
				    </li>
				
				    <li class="controle">
					    <input type="submit" value="Entrar" class="round" />
				    </li>
			    </ul>
            </form>
		
		    <span class="separador branco"></span>
		
		    <ul class="submenuLogin">
			    <li class="sub"><a href="#" class="esqueciSenha">Putz, esqueci minha senha</a></li>
			
			    <li class="recuperar round">
				    <form id="form-recuperar-senha" action="/RecuperarSenha" method="post">
					    <label for="recuperar">Email cadastrado</label>
					    <input type="text" id="recuperar" name="Email" maxlength="100" />
					    <input type="submit" value="Enviar" />
				    </form>
			    </li>			
		    </ul>
		
	    </div>
    </div>
    
    <script type="text/javascript" src="@Url.Content("~/Content/Js/jquery-1.6.1.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/Js/jquery.corner.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/Js/functions.js")"></script>
    <script type="text/javascript">
        jQuery(function () {
            var message = '@ViewBag.Message';
            if (message) { 
                alert(message);
            }
        });
    </script>
</body>
</html>